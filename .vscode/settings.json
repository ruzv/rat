{
    "gopls": {
        "gofumpt": true,
        "analyses": {
            "nilness": true,
            "unusedwrite": true
            // "fieldalignment": true
        }
        // "formatting.gofumpt": true,
    },

    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.go$",
                "cmd": "golines ${file} -w -m 80 --shorten-comments --chain-split-dots"
            }
        ]
    },

    "[json]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.tabWidth": 2,

    "zenMode.hideActivityBar": false
}
